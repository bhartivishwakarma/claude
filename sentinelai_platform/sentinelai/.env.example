# SentinelAI — Environment Configuration
# Copy this file to .env and fill in your values

# ── AI PROVIDERS ──────────────────────────────────────────────
# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI (optional)
OPENAI_API_KEY=sk-your-openai-key-here

# ── APP SETTINGS ──────────────────────────────────────────────
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# ── PRIVACY SETTINGS ──────────────────────────────────────────
DEFAULT_ANONYMIZE=true
DEFAULT_LOCAL_MODE=true
DEFAULT_TEMP_ONLY=true

# ── MONITORING ────────────────────────────────────────────────
DEFAULT_REFRESH_RATE=5
MAX_FEED_SIZE=100

# ── THRESHOLDS ────────────────────────────────────────────────
CRITICAL_THRESHOLD=75
HIGH_THRESHOLD=55
MEDIUM_THRESHOLD=30
LOW_THRESHOLD=10
